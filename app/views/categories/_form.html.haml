
- if @category.errors.present?
  - name_error = @category.errors[:name]
  
= form_for (@category) do |f|
  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'
    -if name_error.present?
      %span.error_msg
        Name #{name_error.first}
  .form-group
    = f.label :description
    = f.text_area :description, class: 'form-control'

  .form-group
    = f.submit "#{@category.new_record? ? 'Save' : 'Update'}", class: 'form-control'