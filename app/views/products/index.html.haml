
.text-center
	%h2 All Products
= link_to "Create New Product", new_product_path, class: 'btn btn-primary'
%br
%br
%table.table.table-bordered-table-responsive.table-striped.bg-white.border
	%thead.thead-dark
		%tr.border.border-dark
			%th ID
			%th Picture
			%th Name
			%th Price
			%th Description
			%th{ colspan: 3} Actions
	%tbody
		-@products.each do |product|
			%tr
				%td= product.id
				%td= product.image
				%td= product.name
				%td= product.price
				%td= product.description
				%td= link_to "Show", product
				%td= link_to "Edit", edit_product_path(product)
				%td= link_to "Delete", product , method: :delete
			