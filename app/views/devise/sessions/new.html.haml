.row
  .col-lg-4.offset-lg-4
    .card.border.border-primary
      .card-head.text-center.border-primary.border-bottom
        %h2.text-primary Log in
      .card-body
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form-group
            = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control border-primary', placeholder: 'Enter Email'
          %div
            = f.password_field :password, autocomplete: "current-password", class: 'form-control border-primary', placeholder: 'Enter Password'
          .float-right
            = link_to "Forgot your password?", new_password_path(resource_name), class: 'text-muted'
          %br/
          .form-group.mb-2.mt-2{:style => "margin-top: 5px;"}
            = f.submit "Log in", class: 'btn btn-primary btn-block'
          .form-group.text-center
            %span Do not have account?
            = link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-outline-success btn-block'
          = render 'devise/shared/links'
